rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload/read their own profile images
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Resume exports and attachments
    match /resumes/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Template assets (read-only for all authenticated users)
    match /templates/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can upload templates
    }
  }
}